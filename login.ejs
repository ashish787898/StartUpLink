<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>InnovateFund - Login</title>
  <link rel="stylesheet" href="/css/login.css" />
</head>
<body>
  <div id="particles-js"></div>

  <div class="main-container">
    <!-- Left panel with typewriter effect -->
    <div class="left-panel">
      <h1 id="typewriter">
        <span id="text"></span><span id="cursor">|</span>
      </h1>
    </div>

    <!-- Right panel with full-height login form -->
    <div class="right-panel">
      <div class="container">
        <div class="card">
          <h2>Login to InnovateFund</h2>

          <!-- âœ… Correct form setup without <a> tag -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" name="email" placeholder="Enter your email" required />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" name="password" placeholder="Enter your password" required />
            </div>

            <!-- âœ… Use proper submit button -->
            <button type="submit">Login</button>

            <p>Don't have an account? <a href="/signup">Sign up here</a></p>
          </form>

        </div>
      </div>
    </div>
  </div>

  <!-- Particle.js and custom JS -->
  <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
  <script>
    // Typewriter line-by-line effect
    const lines = [
      "Have a brilliant ğŸª„ startup  idea?",
      "Drop your idea ğŸ’¡. Gain your investor ğŸ’µ. Build your legacy ğŸ—ï¸.",
      "InnovateğŸš€. InspireğŸ”¥. InvestğŸ’°."
    ];

    const textEl = document.getElementById("text");
    const cursor = document.getElementById("cursor");
    let lineIndex = 0;
    let charIndex = 0;

    function typeLine() {
      if (lineIndex < lines.length) {
        const line = lines[lineIndex];
        if (charIndex < line.length) {
          textEl.innerHTML += line.charAt(charIndex);
          charIndex++;
          setTimeout(typeLine, 60);
        } else {
          textEl.innerHTML += "<br/>";
          lineIndex++;
          charIndex = 0;
          setTimeout(typeLine, 500);
        }
      } else {
        cursor.style.display = "none";
      }
    }

    typeLine();

    // ParticleJS config
    particlesJS("particles-js", {
      particles: {
        number: {
          value: 80,
          density: { enable: true, value_area: 800 },
        },
        color: { value: "#ffffff" },
        shape: {
          type: "circle",
          stroke: { width: 0, color: "#000000" },
          polygon: { nb_sides: 5 },
        },
        opacity: {
          value: 0.5,
          random: false,
          anim: { enable: false },
        },
        size: {
          value: 3,
          random: true,
          anim: { enable: false },
        },
        line_linked: {
          enable: true,
          distance: 150,
          color: "#ffffff",
          opacity: 0.4,
          width: 1,
        },
        move: {
          enable: true,
          speed: 4,
          direction: "none",
          random: false,
          straight: false,
          out_mode: "out",
          bounce: false,
        },
      },
      interactivity: {
        detect_on: "canvas",
        events: {
          onhover: { enable: true, mode: "grab" },
          onclick: { enable: true, mode: "push" },
          resize: true,
        },
        modes: {
          grab: { distance: 200, line_linked: { opacity: 1 } },
          bubble: { distance: 400, size: 40, duration: 2 },
          repulse: { distance: 200, duration: 0.4 },
          push: { particles_nb: 4 },
          remove: { particles_nb: 2 },
        },
      },
      retina_detect: true,
    });
  </script>
</body>
</html>
